<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.francesco.myfirstapp"
    android:installLocation="internalOnly">

    <!-- Permessi applicazione -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- TODO: TOGLIERE android:debuggable="true" PRIMA DELLA RELEASE -->
    <!-- TODO: modificare android:icon="@mipmap/ic_launcher" e mettere immagine icona app -->
    <application
        android:name=".SensorProjectApp"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/gaiaTheme">
        <activity android:name=".ActivityIntro">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ActivityLinearGraph"
            android:label="@string/ResultsActivity"
            android:parentActivityName=".ActivityReader" />
        <activity
            android:name=".ActivityDisplayAlarm"
            android:label="@string/DisplayErrorActivityLabel"
            android:parentActivityName=".ActivityReader" />
        <activity
            android:name=".ActivityLogin"
            android:label="@string/loginActivity"
            android:parentActivityName=".ActivityReader" />
        <activity
            android:name=".ActivityCakeGraph"
            android:label="@string/ResultsActivity"
            android:parentActivityName=".ActivityReader" />

        <!-- todo -->

        <!-- ricevitori -->
        <receiver android:name=".NotificationBarAlarm" />
        <receiver
            android:name=".AutostartOnBoot"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
            </intent-filter>
        </receiver>
        <receiver android:name=".BackgroundTask" />

        <!-- ********** SERVICE ***************** -->
        <service
            android:name=".StarterService"
            android:enabled="true"
            android:exported="true" />
        <!-- NOTA BENE [] android:exported -> permetto ad activity di altre app di avviare questo service -->

        <activity android:name=".ActivityReader"></activity>
    </application>

</manifest>