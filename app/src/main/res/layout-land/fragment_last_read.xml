<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.francesco.myfirstapp.FragmentLastRead">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">


        <LinearLayout
            android:id="@+id/LinearLayoutMeter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_last_read_Description"
            android:layout_marginTop="10dp"
            android:layout_toStartOf="@+id/btLastRead"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.28"
                android:text="@string/tvSelectMeter"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <Spinner
                android:id="@+id/MeterSpinner"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginStart="34dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvDisplayTimeResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_box"
            android:layout_marginLeft="15dp"
            android:text=" "
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_alignBaseline="@+id/tvDisplayValueResult"
            android:layout_alignBottom="@+id/tvDisplayValueResult"
            android:layout_alignEnd="@+id/btLastRead"
            android:layout_toEndOf="@+id/tvDisplayValueResult" />

        <LinearLayout
            android:id="@+id/LinearLayoutSensor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/LinearLayoutMeter"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/LinearLayoutMeter"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_weight="0.28"
                android:layout_height="match_parent"
                android:text="@string/tvSelectSensor"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <Spinner
                android:id="@+id/SensorSpinner"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginStart="34dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvDisplayValueResult"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:background="@drawable/border_box"
            android:gravity="center"
            android:text=" "
            android:textSize="30sp"
            android:layout_below="@+id/btLastRead"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"/>

        <ImageButton
            android:id="@+id/btLastRead"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/LinearLayoutMeter"
            android:layout_marginEnd="17dp"
            android:adjustViewBounds="true"
            android:background="@drawable/bt_search_ok_selector"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_search_white_48dp" />


        <ProgressBar
            android:id="@+id/progressLatRead"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="57dp"
            android:indeterminateDrawable="@drawable/circular_progress_bar"
            android:layout_alignBottom="@+id/tvDisplayValueResult"
            android:layout_toStartOf="@+id/tvDisplayTimeResult" />

    </RelativeLayout>

</FrameLayout>
