<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.francesco.myfirstapp.FragmentTimeRead">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/tv_time_read_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/descriptionTimeRead"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />


        <LinearLayout
            android:id="@+id/LinearLayoutSensor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/LinearLayoutMeter"
            android:layout_toEndOf="@+id/progTimeRead"
            android:layout_alignStart="@+id/LinearLayoutMeter">

            <TextView
                android:text="@string/tvSelectSensor"
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" />

            <Spinner
                android:id="@+id/SensorSpinner"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:layout_marginStart="34dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/LinearLayoutFrom"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_above="@+id/imageView1"
            android:layout_alignParentStart="true">

            <Button
                android:id="@+id/btFromDate"
                android:layout_weight="1.3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btDate"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <Button
                android:layout_weight="1"
                android:id="@+id/btFromHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btHour"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutTo"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

            <Button
                android:layout_weight="1"
                android:id="@+id/btToDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btDate"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <Button
                android:layout_weight="1"
                android:id="@+id/btToHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btHour"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
        </LinearLayout>


        <ProgressBar
            android:id="@+id/progTimeRead"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:indeterminateDrawable="@drawable/circular_progress_bar"
            android:layout_above="@+id/imageView1"
            android:layout_alignStart="@+id/imageView1"
            android:layout_marginStart="59dp"
            android:layout_marginBottom="23dp" />

        <ImageButton
            android:id="@+id/btTimeRead"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/bt_search_ok_selector"
            android:src="@drawable/ic_search_white_48dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="27dp"
            android:layout_marginBottom="14dp" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/bottom_arrow"
            android:layout_marginStart="49dp"
            android:layout_above="@+id/LinearLayoutTo"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:id="@+id/LinearLayoutMeter"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/tv_time_read_description"
            android:layout_alignParentEnd="true">

            <TextView
                android:text="@string/tvSelectMeter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/textView" />

            <Spinner
                android:id="@+id/MeterSpinner"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:layout_marginStart="34dp" />
        </LinearLayout>


    </RelativeLayout>

</FrameLayout>