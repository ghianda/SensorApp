<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.francesco.myfirstapp.FragmentHome">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switchService"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="59dp"
        android:layout_marginEnd="59dp" />

    <TextView
        android:id="@+id/tvStationName"
        android:text="station"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/tvUserName"
        android:layout_alignStart="@+id/tvUserName"
        android:layout_marginTop="78dp" />

    <TextView
        android:id="@+id/tvUserName"
        android:text="user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2" />


        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:text="@string/serviceText"
        android:layout_below="@+id/tvStationName"
        android:layout_alignEnd="@+id/button2"
        android:layout_marginTop="28dp" />

        <Button
            android:text="@string/btLastReading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:onClick="startLastReadActivity"
            android:layout_marginLeft="45dp"
            android:layout_marginStart="15dp"
            android:layout_below="@+id/switchService"
            android:layout_alignParentStart="true"
            android:layout_marginTop="144dp" />

        <Button
            android:id="@+id/btCakeActivity"
            android:text="@string/btCake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startCompareActivity"
            android:layout_alignBaseline="@+id/button2"
            android:layout_alignBottom="@+id/button2"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp" />

        <Button
        android:text="@string/btTimeReading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:onClick="startTimeActivity"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</FrameLayout>
