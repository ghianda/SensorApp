<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_last_read_Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="descrizione"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/LinearLayoutMeter"
        android:layout_alignParentStart="true">

        <TextView
            android:text="@string/tvSelectSensor"
            android:layout_width="0dp"
            android:layout_weight="0.42"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <Spinner
            android:id="@+id/SensorSpinner"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            />
        </LinearLayout>


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/bottom_navigation_menu" />

    <TextView
        android:id="@+id/tvDisplayTimeResult"
        android:text=" "
        android:background="@drawable/border_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_above="@+id/bottom_navigation"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="36dp" />

    <TextView
        android:id="@+id/tvDisplayValueResult"
        android:text=" "
        android:background="@drawable/border_box"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:textSize="30sp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:layout_above="@+id/tvDisplayTimeResult"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:id="@+id/LinearLayoutMeter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/tv_last_read_Description"
        android:layout_alignParentStart="true">

        <TextView
            android:text="@string/tvSelectMeter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <Spinner
            android:id="@+id/MeterSpinner"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp" />
    </LinearLayout>

    <ImageButton
        android:onClick="read"
        android:id="@+id/btLastRead"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/bt_search_ok_selector"
        android:src="@drawable/ic_search_white_48dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_alignTop="@+id/tvDisplayValueResult"
        android:layout_alignEnd="@+id/bottom_navigation" />

</RelativeLayout>