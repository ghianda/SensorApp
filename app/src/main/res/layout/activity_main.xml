<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!-- Invio messaggio -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText android:id="@+id/edit_message"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/edit_message"/>
        <Button
            android:id="@+id/sendText_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_send"
            android:onClick="sendMessage"/>
    </LinearLayout>





    <!-- Collegamento Internet per richiesta XML -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/text_net_xml_get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_xml"
            android:layout_weight="1" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/network_button"
            android:onClick="connectNetworkXml"/>
    </LinearLayout>


    <!-- TestBox che contiene i risultati: -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_response" />
    </LinearLayout>



    <!--Selezione sensore) -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/selectSensorText"/>
        <Spinner
            android:id="@+id/sensor_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/nothing_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nothing"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/parse_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PARSE"
            android:layout_weight="1"
            android:onClick="ParseRequest"/>
    </LinearLayout>


</LinearLayout>


